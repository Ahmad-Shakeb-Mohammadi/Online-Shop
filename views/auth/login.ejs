<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>

                <form class="login-form" action="/login" method="POST" novalidate>
                    <div class="form-control">
                        <label for="title">E-Mail</label>
                        <input type="email" name="email" id="email"
                            class="<%= validationErr.find(e => e.path == 'email')? 'invalid': '' %>"
                            value="<%= oldInputs.email %>">
                        <% if (emailMessage.length>0){ %>
                            <label class="user-message user-message--error" for="email">
                                <%= emailMessage %>
                            </label>
                            <% } %>
                                <% let emailerr=validationErr.find(e=> e.path == 'email') %>
                                    <% if(emailerr){ %>
                                        <label class="user-message user-message--error" for="email">
                                            <%= emailerr.msg %>
                                        </label>
                                        <% } %>
                    </div>
                    <div class="form-control">
                        <label for="imageUrl">Password</label>
                        <input type="password" name="password" id="password"
                            class="<%= validationErr.find(e => e.path == 'password')? 'invalid': '' %> "
                            value="<%= oldInputs.password %>">
                        <% if (passwordMessage.length>0){ %>
                            <label class="user-message user-message--error" for="email">
                                <%= passwordMessage %>
                            </label>
                            <% } %>
                                <% let err=validationErr.find(e=> e.path == 'password') %>
                                    <% if(err){ %>
                                        <label class="user-message user-message--error" for="email">
                                            <%= err.msg %>
                                        </label>
                                        <% } %>
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn" type="submit">Login</button>
                    <div class="centered form-control">
                        <a href="/reset">Reset Password</a>
                    </div>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>